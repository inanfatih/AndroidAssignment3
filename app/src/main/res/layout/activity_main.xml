<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.fatih_kamal_mapd711_onlinepurchase.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Type"
        style="@style/labelStyle"
        android:padding="4pt"
        />
    <RadioGroup android:id="@+id/rgUT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5pt"
        android:orientation="horizontal"
        style="@style/labelStyle"
        >

        <RadioButton android:id="@+id/radio_Clerk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_Clerk"
            style="@style/labelStyle"
            />

        <RadioButton android:id="@+id/radio_Standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/radio_Customer"
            style="@style/labelStyle"
            />

    </RadioGroup>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/mainscreenimage" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        style="@style/labelStyle"
        />

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"/>
        <!--android:text="cust" -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        style="@style/labelStyle"
        />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"/>
    <!--android:text="password"-->




    <Button
        style="@style/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onLogin_Click"
        android:text="Login" />

</LinearLayout>